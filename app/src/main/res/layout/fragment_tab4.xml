<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <com.aspsine.swipetoloadlayout.SwipeToLoadLayout
        android:id="@+id/swipeToLoadLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:swipe_style="classic">


        <include
            android:id="@id/swipe_refresh_header"
            layout="@layout/layout_google_hook_header" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/swipe_target"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:scrollbars="none">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.lihang.ShadowLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginBottom="8dp"
                    app:hl_cornerRadius="3dp"
                    app:hl_shadowBackColor="#fff"
                    app:hl_shadowColor="#11000000"
                    app:hl_shadowLimit="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="14dp">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@mipmap/icon_usdt_zc"
                                android:drawablePadding="5dp"
                                android:text="账户可用(USDT)"
                                android:textColor="#C5C5C5"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/text_usdt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#3F63F4"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/text_usdt_charge"
                                android:layout_width="57dp"
                                android:layout_height="28dp"
                                android:layout_marginRight="11dp"
                                android:background="@drawable/text_usdt_charge"
                                android:gravity="center"
                                android:text="充币"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp" />


                            <TextView
                                android:id="@+id/text_usdt_carry"
                                android:layout_width="57dp"
                                android:layout_height="28dp"
                                android:background="@drawable/text_usdt_carry"
                                android:gravity="center"
                                android:text="提币"
                                android:textColor="#708CFF"
                                android:textSize="12sp" />
                        </LinearLayout>


                    </RelativeLayout>


                </com.lihang.ShadowLayout>


                <com.lihang.ShadowLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    app:hl_cornerRadius="3dp"
                    app:hl_shadowBackColor="#fff"
                    app:hl_shadowColor="#11000000"
                    app:hl_shadowLimit="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="14dp">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@mipmap/icon_china_box"
                                android:drawablePadding="5dp"
                                android:text="账户可用(BOX)"
                                android:textColor="#C5C5C5"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/text_box"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#3F63F4"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/text_box_charge"
                                android:layout_width="57dp"
                                android:layout_height="28dp"
                                android:layout_marginRight="11dp"
                                android:background="@drawable/text_usdt_charge"
                                android:gravity="center"
                                android:text="充币"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp" />


                            <TextView
                                android:id="@+id/text_box_carry"
                                android:layout_width="57dp"
                                android:layout_height="28dp"
                                android:background="@drawable/text_usdt_carry"
                                android:gravity="center"
                                android:text="提币"
                                android:textColor="#708CFF"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </com.lihang.ShadowLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp">

                    <ImageView
                        android:id="@+id/text_line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp"
                        android:src="@mipmap/icon_line_zc" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/text_line"
                        android:gravity="center"
                        android:text="奖励列表"
                        android:textColor="@color/black"
                        android:textSize="15sp" />


                    <TextView
                        android:id="@+id/text_usd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:drawableRight="@mipmap/ic_path"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:text="USDT"
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                </RelativeLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp" />


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <include
            android:id="@id/swipe_load_more_footer"
            layout="@layout/layout_google_hook_footer" />
    </com.aspsine.swipetoloadlayout.SwipeToLoadLayout>
</RelativeLayout>