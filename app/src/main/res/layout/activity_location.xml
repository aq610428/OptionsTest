<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.amap.api.maps.MapView
        android:id="@+id/mMapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include layout="@layout/activity_title" />


    <RelativeLayout
        android:id="@+id/rl_verison"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/shape_four_par_corners_bg"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/gps_park_id"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_gps" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingRight="80dp"
            android:layout_toRightOf="@+id/gps_park_id"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gps_park_id_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已选中的保险公司"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/gps_park_id_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/gps_park_id_navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:text="点击导航"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />
    </RelativeLayout>


</RelativeLayout>