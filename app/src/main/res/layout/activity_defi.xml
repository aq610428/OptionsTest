<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include layout="@layout/activity_title" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">


                <com.lihang.ShadowLayout
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    app:hl_cornerRadius="3dp"
                    app:hl_shadowBackColor="#fff"
                    app:hl_shadowColor="#08000000"
                    app:hl_shadowLimit="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="全网DeFi锁仓(BOX)"
                            android:textColor="@color/black99"
                            android:textSize="@dimen/ctv_sizen_11" />

                        <TextView
                            android:id="@+id/text_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#F05330"
                            android:textSize="@dimen/ctv_sizen_14"
                            android:textStyle="bold" />

                    </LinearLayout>
                </com.lihang.ShadowLayout>


                <com.lihang.ShadowLayout
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    app:hl_cornerRadius="3dp"
                    app:hl_shadowBackColor="#fff"
                    app:hl_shadowColor="#08000000"
                    app:hl_shadowLimit="5dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="DeFi参与用户(人)"
                            android:textColor="@color/black99"
                            android:textSize="@dimen/ctv_sizen_11" />

                        <TextView
                            android:id="@+id/text_deif"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#F05330"
                            android:textSize="@dimen/ctv_sizen_14"
                            android:textStyle="bold" />

                    </LinearLayout>

                </com.lihang.ShadowLayout>


                <com.lihang.ShadowLayout
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    app:hl_cornerRadius="3dp"
                    app:hl_shadowBackColor="#fff"
                    app:hl_shadowColor="#08000000"
                    app:hl_shadowLimit="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="DeFi累计挖出(BOX)"
                            android:textColor="@color/black99"
                            android:textSize="@dimen/ctv_sizen_11" />

                        <TextView
                            android:id="@+id/text_pay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#F05330"
                            android:textSize="@dimen/ctv_sizen_14"
                            android:textStyle="bold" />

                    </LinearLayout>

                </com.lihang.ShadowLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="12dp">

                <com.jkabe.app.box.weight.ClearEditText
                    android:id="@+id/et_num"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginRight="113dp"
                    android:background="@color/white"
                    android:hint="请输入参投额度"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#3B60F6"
                    android:textSize="@dimen/ctv_sizen_14" />


                <TextView
                    android:id="@+id/text_ensure"
                    android:layout_width="103dp"
                    android:layout_height="43dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shape_bg_vx2"
                    android:gravity="center"
                    android:text="确定参投"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ctv_sizen_13" />


            </RelativeLayout>


            <TextView
                android:id="@+id/text_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                android:gravity="center|left"
                android:text="0"
                android:textColor="@color/black99"
                android:textSize="@dimen/ctv_sizen_13" />


            <TextView
                android:id="@+id/text_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="12dp"
                android:gravity="center|left"
                android:lineSpacingMultiplier="1.3"
                android:text="本方案是Box Defi定投3个月的理财方案，所投资Box锁 仓3个月，到期后一次性释放理财收益。\n本方案收益率为21% \n本方案Box Defi定投500Box起，100Box的整数倍递增，最高 接受10万Box定投。\n本方案可在投资期内赎回，T+3解锁；提前赎回不计投资收益。"
                android:textColor="@color/black7e"
                android:textSize="@dimen/ctv_sizen_12" />

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</RelativeLayout>