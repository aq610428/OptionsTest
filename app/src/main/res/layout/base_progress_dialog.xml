<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/base_progress_dialog"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="12dp">

    <com.jkabe.app.android.weight.CircleProgressBar
        android:id="@id/base_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:mlpb_progress_color="#29abe2"
        app:mlpb_progress_stoke_width="2dp" />

    <TextView
        android:id="@id/base_progress_message"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:lineSpacingExtra="1dp"
        android:maxLines="2"
        android:text=""
        android:textColor="@color/colorWhite"
        android:textSize="13sp" />


    <TextView
        android:id="@+id/base_progress_btn"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/base_press"
        android:gravity="center"
        android:lineSpacingExtra="1dp"
        android:maxLines="2"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:text="更换源站"
        android:textColor="@color/black66"
        android:textSize="14sp"
        android:visibility="gone" />
</LinearLayout>