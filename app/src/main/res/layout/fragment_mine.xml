<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingLeft="15dp"
                android:paddingTop="50dp"
                android:paddingRight="15dp"
                android:paddingBottom="50dp">

                <ImageView
                    android:id="@+id/icon_head"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/icon_tx" />

                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/icon_head"
                    android:gravity="center"
                    android:text="用户登录"
                    android:textColor="@color/black33"
                    android:textSize="17sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/text_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:background="@drawable/edit_bg"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingTop="3dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="3dp"
                    android:text="编辑资料"
                    android:textColor="@color/black87"
                    android:textSize="14sp" />
            </RelativeLayout>


            <TextView
                android:id="@+id/text_invitation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:drawableLeft="@mipmap/icon_invitation"
                android:drawableRight="@mipmap/icon_right"
                android:drawablePadding="6dp"
                android:gravity="center|left"
                android:padding="15dp"
                android:text="邀请好友"
                android:textColor="@color/black33"
                android:textSize="14sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/dive_line" />

            <TextView
                android:id="@+id/text_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:drawableLeft="@mipmap/icon_code"
                android:drawableRight="@mipmap/icon_right"
                android:drawablePadding="6dp"
                android:gravity="center|left"
                android:padding="15dp"
                android:text="扫一扫"
                android:textColor="@color/black33"
                android:textSize="14sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/dive_line" />

            <TextView
                android:id="@+id/text_contacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:drawableLeft="@mipmap/icon_contacts"
                android:drawableRight="@mipmap/icon_right"
                android:drawablePadding="6dp"
                android:gravity="center|left"
                android:padding="15dp"
                android:text="联系我们"
                android:textColor="@color/black33"
                android:textSize="14sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/dive_line" />

            <TextView
                android:id="@+id/text_bind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:drawableLeft="@mipmap/icon_bind"
                android:drawableRight="@mipmap/icon_right"
                android:drawablePadding="6dp"
                android:gravity="center|left"
                android:padding="15dp"
                android:text="解除绑定"
                android:textColor="@color/black33"
                android:textSize="14sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/dive_line" />

            <TextView
                android:id="@+id/text_car"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:drawableLeft="@mipmap/icon_car_mine"
                android:drawableRight="@mipmap/icon_right"
                android:drawablePadding="6dp"
                android:gravity="center|left"
                android:padding="15dp"
                android:text="车辆详情"
                android:textColor="@color/black33"
                android:textSize="14sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/dive_line" />

            <TextView
                android:id="@+id/text_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:drawableLeft="@mipmap/icon_about"
                android:drawableRight="@mipmap/icon_right"
                android:drawablePadding="6dp"
                android:gravity="center|left"
                android:padding="15dp"
                android:text="关于我们"
                android:textColor="@color/black33"
                android:textSize="14sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/dive_line" />


            <TextView
                android:id="@+id/text_out"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="7dp"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:padding="15dp"
                android:text="退出登录"
                android:textColor="@color/black33"
                android:textSize="14sp" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>