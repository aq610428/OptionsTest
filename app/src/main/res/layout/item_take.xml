<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.lihang.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        app:hl_cornerRadius="5dp"
        app:hl_shadowBackColor="#fff"
        app:hl_shadowColor="#08000000"
        app:hl_shadowLimit="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/text_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="2019-06-24"
                    android:textColor="@color/black01"
                    android:textSize="@dimen/ctv_sizen_14" />


                <TextView
                    android:id="@+id/text_stats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="未支付"
                    android:textColor="@color/black01"
                    android:textSize="@dimen/ctv_sizen_14" />

            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/text_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/text_count"
                    android:gravity="center"
                    android:text="共2件"
                    android:textColor="@color/black01"
                    android:textSize="@dimen/ctv_sizen_14" />

                <TextView
                    android:id="@+id/text_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="实付 ￥169.00"
                    android:textColor="#3F63F4"
                    android:textSize="@dimen/ctv_sizen_14" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/rl_tab1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_cancel"
                    android:layout_width="76dp"
                    android:layout_height="26dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/btn_shape"
                    android:gravity="center"
                    android:text="取消订单"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/ctv_sizen_13" />

                <TextView
                    android:id="@+id/text_buy"
                    android:layout_width="76dp"
                    android:layout_height="26dp"
                    android:background="@drawable/btn_shape"
                    android:gravity="center"
                    android:text="立即支付"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/ctv_sizen_13" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/rl_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="right">



                <TextView
                    android:id="@+id/text_confirm"
                    android:layout_width="76dp"
                    android:layout_height="26dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/btn_shape"
                    android:gravity="center"
                    android:text="确认收货"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/ctv_sizen_13" />

                <TextView
                    android:id="@+id/text_skills"
                    android:layout_width="76dp"
                    android:layout_height="26dp"
                    android:background="@drawable/btn_shape"
                    android:gravity="center"
                    android:text="查看物流"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/ctv_sizen_13" />


                <TextView
                    android:id="@+id/text_Urge"
                    android:layout_width="76dp"
                    android:layout_height="26dp"
                    android:background="@drawable/btn_shape"
                    android:gravity="center"
                    android:text="催发货"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/ctv_sizen_13" />


            </LinearLayout>

        </LinearLayout>


    </com.lihang.ShadowLayout>

</RelativeLayout>