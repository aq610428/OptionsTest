<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.lihang.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:hl_cornerRadius="3dp"
        app:hl_shadowBackColor="#fff"
        app:hl_shadowColor="#2A918F8F"
        app:hl_shadowLimit="4dp">


        <LinearLayout
            android:id="@+id/ll_tab1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:padding="6dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.5">

                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="38dp"
                    android:layout_height="38dp" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_weight="1.3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="CAR"
                    android:textColor="@color/black"
                    android:textSize="@dimen/ctv_sizen_12"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_traveled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="/USD"
                    android:textColor="@color/black7e"
                    android:textSize="@dimen/ctv_sizen_12" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_weight="0.7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0.0015"
                    android:textColor="@color/black"
                    android:textSize="@dimen/ctv_sizen_12"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/text_price_cny"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="0.0015"
                    android:textColor="#707070"
                    android:textSize="@dimen/ctv_sizen_12" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_weight="0.5">

                <TextView
                    android:id="@+id/text_Increase"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/shape_login"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="0.0015"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/ctv_sizen_12" />

            </RelativeLayout>

        </LinearLayout>

    </com.lihang.ShadowLayout>
</LinearLayout>