<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="BOX 矿池"
        android:textColor="@color/black33"
        android:textSize="@dimen/ctv_sizen_16"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/line_bg_shape"
        android:gravity="center"
        android:padding="0.5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_tab1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#3F63F4"
            android:gravity="center"
            android:text="行情"
            android:textColor="@color/colorWhite"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/text_tab2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="挖矿"
            android:textColor="#828282"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/text_tab3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="理财"
            android:textColor="#828282"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/text_tab4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="资产"
            android:textColor="#828282"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/text_tab5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="社区"
            android:textColor="#828282"
            android:textSize="13sp" />
    </LinearLayout>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>


