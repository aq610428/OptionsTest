<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">


    <include layout="@layout/activity_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:padding="15dp">


        <EditText
            android:id="@+id/et_mobile"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorWhite"
            android:cursorVisible="true"
            android:gravity="center|left"
            android:hint="请输入密码(密码长度至少6位)"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:textColor="#677E9C"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/ctv_sizen_14" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/dive_line" />

        <EditText
            android:id="@+id/e_password"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:background="@color/colorWhite"
            android:cursorVisible="true"
            android:gravity="center|left"
            android:hint="请确认密码"
            android:inputType="textPassword"
            android:textColor="#677E9C"
            android:textCursorDrawable="@drawable/shape_bg_rech"
            android:textSize="@dimen/ctv_sizen_14" />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/dive_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">


            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/next_shape"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/ctv_sizen_15" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>